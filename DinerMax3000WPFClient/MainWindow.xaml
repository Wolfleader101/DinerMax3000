<Window x:Class="DinerMax3000WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:WPFClient="clr-namespace:DinerMax3000.WPFClient"
        mc:Ignorable="d"
        Title="DinerMax3000" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <WPFClient:DinerMax3000ViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <ComboBox Name="cboAllMenus" SelectedItem="{Binding SelectedMenu}" ItemsSource="{Binding AllMenus}" DisplayMemberPath="Name"></ComboBox>
            <DataGrid ItemsSource="{Binding SelectedMenu.items}" />
            <WrapPanel>
                <Label>Title</Label>
                <TextBox Width="150" Text="{Binding NewMenuItem.Title}"></TextBox>
                <Label>Price</Label>
                <TextBox Width="50" Text="{Binding NewMenuItem.Price}"></TextBox>
            </WrapPanel>
            <Label>Description</Label>
            <TextBox Text="{Binding NewMenuItem.Description}"></TextBox>
            <Button Click="Button_Click">Save new menu item</Button>
        </StackPanel>
    </Grid>
</Window>
